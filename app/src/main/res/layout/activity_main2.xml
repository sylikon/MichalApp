<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maciek.onebuttonweb.DatabaseHandler">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/database_confrim_textView"/>
        <Button
            android:id="@+id/button_confirm_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/database_confirm_button"
            android:textAllCaps="false"
            />


    </LinearLayout>
    <WebView
        android:id="@+id/webview_update_database"
        android:layout_width="0dp"
        android:layout_height="0dp"></WebView>
    <WebView
        android:id="@+id/webview_update_location"
        android:layout_width="0dp"
        android:layout_height="0dp"></WebView>

</FrameLayout>
